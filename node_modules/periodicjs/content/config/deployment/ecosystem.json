{
  "apps" : [{
    "name"              : "periodicjs",
    "script"            : "index.js",
    "instances"         : "1",
    "min_uptime"        : "200", 
    "max_restarts"      : "10", 
    "cron_restart"      : "1 0 * * *",
    "watch"             : ["./content/config/restart.json","./content/config/database.js"],
    "error_file"        : "logs/development-err.log",
    "out_file"          : "logs/development-out.log",
    "pid_file"          : "processes/development-child.pid",
    "merge_logs"        : "true",
    "one_launch_only"   : "true",
    "exec_mode"         : "fork_mode",
    "env": {
      "NODE_ENV": "development"
    }
  }],
  "deploy" : {
    "prod1" : {
      "key" : "../otherdocs/pf-ils.pem",
      "user" : "ubuntu",
      "host" : "ils-app1-prod.promisefinancial.net",
      "ref"  : "origin/deploy_production",
      "repo" : "git@github.com:PromiseFinancial/promise-internal-server.git",
      "path" : "/var/www/promise-internal-server",
      "post-deploy" : "cd periodicjs && sudo npm run deploysync"
    },
    "prod2" : {
